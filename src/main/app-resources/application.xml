<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="my_application">
  <jobTemplates>
    <jobTemplate id="aux">
      <streamingExecutable>/application/aux/run.sh</streamingExecutable>
    <defaultParameters>
      	<parameter id="aux_catalogue">http://catalogue.terradue.int/catalogue/search</parameter>
      	<parameter id="slave" title="InSAR Slave product catalogue entry" abstract="Define the Slave product. The product is passed by references to catalogue entries"/>
    </defaultParameters>  
    </jobTemplate>
    <jobTemplate id="ersasar">
      <streamingExecutable>/application/ersasar/run.sh</streamingExecutable>
      <defaultParameters>
	<parameter id="slave" title="inSAR slave" abstract="inSAR  slave"/>
      </defaultParameters>
      <defaultJobconf>
	<property id="mapred.task.timeout">9900000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
    <workflow id="diapason" title="Diapason InSAR - StripMap(SM)" abstract="DIAPASON is an InSAR tool suite developed by the French Space Agency (CNES) and maintained by ALTAMIRA INFORMATION.This service performs an InSAR workflow on ENVISAT,ERS(RAW and SLC) or Sentinel-1 (SLC) stripmap data, producing interferograms, amplitude and coherence maps. To run this service , specify a master and a slave image of the same mission." >
    <workflowVersion>1.0</workflowVersion>
	<node id="node_aux">
	<job id="aux" />
       	<sources>    
		<source scope="runtime" id="master" title="inSAR master" abstract="inSAR  master" refid="string:list">https://data.terradue.com/gs/catalogue/tepqw/gtfeature/search?format=json%26uid=ASA_IM__0CNPDE20100215_152550_000001202086_00498_41634_8487.N1</source>
	</sources>
	<parameters>
		<parameter id="slave" scope="runtime">https://data.terradue.com/gs/catalogue/tepqw/gtfeature/search?format=json%26uid=ER02_SAR_IM__0P_20040603T104855_20040603T104912_IPA_47686_0000</parameter>
	</parameters>
      </node>
      <node id="node_diap">
      	<job id="ersasar"/>
        <sources>
		<source refid="wf:node">node_aux</source>
        </sources>
      <parameters/>
    </node>
  </workflow>
</application>

